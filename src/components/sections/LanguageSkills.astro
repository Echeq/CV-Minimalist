---
import Section from "../Section.astro"
import { languages } from "@/cv-en.json"
---


<Section title="Language Skills">
    <ul>
        {
            languages.map(({ name }) =>(
                <li>
                    <span>{name}</span>

                </li>


            ))
        }
    </ul>

</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li{
        border-radius: 6px;
        background: #777;
        color: white;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>