---
const { title } = Astro.props
---
<section>
    <h2>
        {title && <h2>{title}</h2>} 
    </h2>
    <slot></slot>
</section>

<!--Separate all the components -->
<style>
    section {
        max-width: 700px;
        margin: 0 auto 40px;
    }

    h2{
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }
</style>